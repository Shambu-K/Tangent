# Program to demonstrate the two ways of drawing a triangle on an svg file
# 1) Using Polygon 
# 2) Using Path 

driver <: :>
(:
    # Creating the image of the output file
    var Image I;
    I>>set_dimension(200, 200);


    # Using Polygon
    var Point p1, p2, p3;
    p1 := make_point(20, 20);
    p2 := make_point(50, 50);
    p3 := make_point(30, 30);

    var Polygon triangle1 := make_polygon(p1, p2, p3);

    # Using Path
    p1 := make_point(70, 70);
    p2 := make_point(100, 100);
    p3 := make_point(90, 90);

    var Path triangle2;
    triangle2>>add_point("M", p1);
    triangle2>>add_point("L", p2);
    triangle2>>add_point("L", p3);
    triangle2>>add_point("L", p1);

    # Inserting both triangles to the Image and creating an output file
    I>>draw(triangle1);
    I>>draw(triangle2);

    I>>output("triangles.svg");

:)