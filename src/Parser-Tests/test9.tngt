#writing functions

int square<: var int n :>   #returns the square of a number
(:
    n := n * n;
    return n;
:)

int cube<: var int n :>     #returns the cube of  a number
(:
    n := n * n * n;
    return n;
:)

int addition<: var int a, var int b :>   #returns the sum of two numbers
(:
    var int sum := a + b;
    return sum;
:)

driver<: :>
(:
    var int n := 5;
    var int sqr := square(n);
    var int cub := cube(n);
    var int sum := addition(sqr, cub);
    print("Number:- " + n + "\n");
    print("Square of " + n + ":- " + sqr + "\n");
    print("Cube of " + n + ":- " + cub + "\n");
    print("Sum of Square and Cube of " + n + ":- " + sum + "\n");
:)